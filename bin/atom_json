'''Command line wrapper for the atom_json script.'''


import sys
from ccs.common.exceptions import ScriptError
import ccs.scripts.atom_json as atom_json


try:
    atom_json.main()
except ScriptError as exc:
    sys.stderr.write('ScriptError: ' + str(exc) + '\n')
    sys.exit(1)
